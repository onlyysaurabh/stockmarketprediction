# AI Analysis Service Configuration

# Google Gemini API Configuration (required for Gemini analyzer)
GEMINI_API_KEY="your_gemini_api_key_here"

# Groq API Configuration (required for Groq analyzer)
# Multiple API keys can be provided separated by commas for rotation
GROQ_API_KEYS="key1,key2,key3"
GROQ_MODEL="llama3-8b-8192"

# Llama-cpp-python Configuration (required for local LLM analyzer)
LLAMA_CPP_MODEL_PATH="finance-chat.Q2_K.gguf"
LLAMA_CPP_N_THREADS=4
LLAMA_CPP_N_CONTEXT=4096

# MongoDB Connection Details (optional, for extended features)
MONGODB_HOST="localhost"
MONGODB_PORT=27017
MONGODB_NAME="stockmarket"
MONGODB_USER="mongouser"
MONGODB_PASSWORD="mongopassword"

# Default AI Analyzer to use (options: 'gemini', 'llama', or 'groq')
DEFAULT_AI_ANALYZER="gemini"

# Alpha Vantage API key for stock data
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_api_key"

# NewsAPI key for news retrieval
NEWS_API_KEY="your_newsapi_key"

# Django secret key
SECRET_KEY="your_django_secret_key_here"

# Debug mode (set to False in production)
DEBUG=True
